<fieldset>	<legend>		{if $section=='global'}			{$translate->_('extendedprint.ui.cfg.globalsettings')}		{else}			{$translate->_('extendedprint.ui.cfg.personalsettings')}		{/if}	</legend>		<form method="post" action="{devblocks_url}{/devblocks_url}" id="configExtendedPrint{$section}" method="post">
		<input type="hidden" name="c" value="config">
		<input type="hidden" name="a" value="handleSectionAction">
		<input type="hidden" name="section" value="extendedprint">
		<input type="hidden" name="action" value="save">
		<input type="hidden" name="global_settings" value="{if $section=='global'}yes{else}no{/if}">		<input type="hidden" name="tab" value="extendedprint.config.tab">			<!--input type="hidden" name="plugin_id" value="{$plugin->id}">		<input type="hidden" name="ext_id" value="extendedprint.config.tab"-->		<!--p><b>{$translate->_('extendedprint.ui.cfg.scope')}</b></p-->			{if $section != 'global'}		<table cellpadding="5" cellspacing="0" border="0">			<tr><td>				<input id="{$section}_use_personal_settings_id" type="checkbox" name="use_personal_settings" value="yes" {if $print_settings['use_personal_settings']}checked{/if} 				> <label for="{$section}_use_personal_settings_id"><b>{$translate->_('extendedprint.ui.cfg.useprivatesettings')}</b></label>			</td></tr>			<!--tr><td>				<input id="global_settings_id" type="checkbox" name="global_settings" value="yes"  				> <label for="global_settings_id">{$translate->_('extendedprint.ui.cfg.globalsettings')}</label>			</td></tr-->		</table>		<hr>		{/if}			<p><b>{$translate->_('extendedprint.ui.cfg.displayoptions')}</b></p>			<table cellpadding="5" cellspacing="0" border="0">			<tr><td>				<input id="{$section}_hide_messages_id" type="checkbox" name="hide_messages" value="yes" {if $print_settings['hide_messages']}checked{/if} 				> <label for="{$section}_hide_messages_id">{$translate->_('extendedprint.ui.cfg.hidemessages')}</label>			</td></tr>			<tr><td>				<input id="{$section}_show_quotes_id" type="checkbox" name="show_quotes" value="yes" {if $print_settings['show_quotes']}checked{/if}				> <label for="{$section}_show_quotes_id">{$translate->_('extendedprint.ui.cfg.showquotes')}</label>			</td></tr>			<tr><td>				<input id="{$section}_custom_styles_id" type="checkbox" name="custom_styles" value="yes" {if $print_settings['custom_styles']}checked{/if}				> <label for="{$section}_custom_styles_id">{$translate->_('extendedprint.ui.cfg.customstyles')}</label>			</td></tr>			<tr><td>				<p>{$translate->_('extendedprint.ui.cfg.customstylesheet')}:</p>				<textarea id="{$section}_custom_style_sheet_id" name="custom_style_sheet" cols="40" rows="10">{$print_settings['custom_style_sheet']}</textarea>			</td></tr>		</table>			<hr>		<p><b>{$translate->_('extendedprint.ui.cfg.printingoptions')}</b></p>			<table cellpadding="5" cellspacing="0" border="0">			<tr><td>				<input id="{$section}_openprintdialog" type="checkbox" name="open_print_dialog" value="yes" {if $print_settings['open_print_dialog']}checked{/if}				> <label for="{$section}_openprintdialog">{$translate->_('extendedprint.ui.cfg.openprintdialog')}</label>			</td></tr>		</table>			<button type="submit" ><span class="cerb-sprite2 sprite-tick-circle-frame"></span> {$translate->_('common.save_changes')}</button>	</form></fieldset>